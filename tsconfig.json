{
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "node",
    "module": "commonjs",      
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./out",
    "lib": ["ES2019"],
    "composite": true,
    "rootDir": "src"
  },
  "include": ["./**/*.ts"]
}
